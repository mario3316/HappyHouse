<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.happyhouse.model.mapper.HouseInfoMapper">
	
	<select id="search" parameterType="int" resultType="HouseInfoDto">
		select * from houseinfo where no = #{no}
	</select>
	
	<select id="searchByDong" parameterType="String" resultType="HouseInfoDto">
		select * from houseinfo where dong like CONCAT('%', #{dong}, '%')
	</select>
	
	<select id="searchByDongAptname" parameterType="map" resultType="HouseInfoDto">
		select * from houseinfo
		where dong = #{dong} and aptname like CONCAT('%', #{aptname}, '%')
		limit 1;
	</select>


</mapper>